#include <iostream>
using namespace std;
int minto1(int n)
{
 int a[1001]={0};
 for(int i=2;i<=n;i++)
 {
     int x=10000,y=10000,z=10000;
     if(i%2==0)
     {
         x=minto1(n/2)+1;
     }
     if(i%3==0)
     {
         y=minto1(n/3)+1;
     }
     else
     z=minto1(n-1)+1;
     a[i]=min(min(x,y),z);
 }
 return a[n];
}
int main() {
	int n;
	cin>>n;
	cout<<minto1(n);
	return 0;
}
